@model IEnumerable<StoreViewModel>

@{
    ViewData["Title"] = "Deleted Stores";
}

<h2>Deleted Stores</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Index" class="btn btn-secondary">View Active Stores</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Owner Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var store in Model)
        {
            <tr>
                <td>@store.Name</td>
                <td>@store.OwnerEmail</td>
         
                <td>
                    <form asp-action="Restore" asp-route-id="@store.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Are you sure you want to restore this store?')">Restore</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>