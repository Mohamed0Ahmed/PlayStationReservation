@model IEnumerable<System.Domain.Models.Store>
@using System.Domain.Models

@{
    ViewData["Title"] = "Deleted Stores";
}

<h2>Deleted Stores</h2>

<p>
    <a asp-action="Index" class="btn btn-secondary">Show Active</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Owner Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3">No deleted stores found.</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.OwnerEmail)</td>
                <td>
                    <form asp-action="Restore" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to restore this store?');">
                        <button type="submit" class="btn btn-sm btn-success">Restore</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <h5>Deleted Rooms for @item.Name</h5>
                    @{
                        var rooms = ViewData[$"Rooms_{item.Id}"] as IEnumerable<Room>;
                        if (rooms != null && rooms.Any())
                        {
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Password</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var room in rooms)
                                    {
                                        <tr>
                                            <td>@room.Username</td>
                                            <td>@room.Password</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No deleted rooms found for this store.</p>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>