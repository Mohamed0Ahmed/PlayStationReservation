@model IEnumerable<System.Domain.Models.Store>
@using System.Domain.Models

@{
    ViewData["Title"] = "Stores";
}

<h2>Active Stores</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a asp-action="Deleted" class="btn btn-secondary">Show Deleted</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Owner Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3">No active stores found.</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.OwnerEmail)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this store?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <a asp-controller="Rooms" asp-action="Create" asp-route-storeId="@item.Id" class="btn btn-sm btn-primary">Add Room</a>
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    <h5>Active Rooms for @item.Name</h5>
                    @{
                        var rooms = ViewData[$"Rooms_{item.Id}"] as IEnumerable<Room>;
                        if (rooms != null && rooms.Any())
                        {
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Password</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var room in rooms)
                                    {
                                        <tr>
                                            <td>@room.Username</td>
                                            <td>@room.Password</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No active rooms found for this store.</p>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>