@model IEnumerable<System.Domain.Models.Room>

@{
    ViewData["Title"] = "Rooms";
    var store = ViewBag.Store as System.Domain.Models.Store;
}

<h2>Active Rooms for @store.Name</h2>




<p>
    <a asp-action="Create" asp-route-storeId="@store.Id" class="btn btn-primary">Create New</a>
    <a asp-action="Deleted" asp-route-storeId="@store.Id" class="btn btn-secondary">Show Deleted</a>
    <a asp-action="Index" asp-controller="Stores" class="btn btn-secondary">Back to Stores</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3">No active rooms found for this store.</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>
                    <a asp-action="Edit" asp-route-storeId="@store.Id" asp-route-roomId="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-storeId="@store.Id" asp-route-roomId="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this room?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>