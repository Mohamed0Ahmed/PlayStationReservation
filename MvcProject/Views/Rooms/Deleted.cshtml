@model IEnumerable<System.Domain.Models.Room>

@{
    ViewData["Title"] = "Deleted Rooms";
    var store = ViewBag.Store as System.Domain.Models.Store;
}

<h2>Deleted Rooms for @store.Name</h2>


<p>
    <a asp-action="Index" asp-route-storeId="@store.Id" class="btn btn-secondary">Show Active</a>
    <a asp-action="Index" asp-controller="Stores" class="btn btn-secondary">Back to Stores</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3">No deleted rooms found for this store.</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                <td>
                    <form asp-action="Restore" asp-route-storeId="@store.Id" asp-route-roomId="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to restore this room?');">
                        <button type="submit" class="btn btn-sm btn-success">Restore</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>